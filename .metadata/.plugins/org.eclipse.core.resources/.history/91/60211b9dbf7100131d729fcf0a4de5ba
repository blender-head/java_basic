package org.blenderhead.chapter7;

//Objects are passed by reference.

class Test {
int a, b;

Test(int i, int j) {
 a = i;
 b = j;
}

// pass an object
void meth(Test o) {
 o.a *=  2;
 o.b /= 2;
}
}

public class CallByRef {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
